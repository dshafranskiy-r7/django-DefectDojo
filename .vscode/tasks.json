{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django: Run Server",
            "type": "shell",
            "command": "${workspaceFolder}/manage.py",
            "args": ["runserver", "0.0.0.0:8000"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "dojo.settings.settings",
                    "DD_DEBUG": "True"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Django: Make Migrations",
            "type": "shell",
            "command": "${workspaceFolder}/manage.py",
            "args": ["makemigrations"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "dojo.settings.settings"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Django: Migrate",
            "type": "shell",
            "command": "${workspaceFolder}/manage.py",
            "args": ["migrate"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "dojo.settings.settings"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Django: Create Superuser",
            "type": "shell",
            "command": "${workspaceFolder}/manage.py",
            "args": ["createsuperuser"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "dojo.settings.settings"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Django: Shell",
            "type": "shell",
            "command": "${workspaceFolder}/manage.py",
            "args": ["shell"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "dojo.settings.settings"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "DefectDojo: Run Unit Tests",
            "type": "shell",
            "command": "./run-unittest.sh",
            "args": ["--test-case", "${input:testCase}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Python: Lint with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["check", "."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Python: Format with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["format", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "testCase",
            "description": "Test case to run (e.g., unittests.test_utils.TestUtils.test_encryption)",
            "default": "unittests.test_utils",
            "type": "promptString"
        }
    ]
}